@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All roles";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-12">
                    <div class="row justify-content-between">
                        <h1>All roles</h1>
                        <a asp-action="CreateRole" class="btn btn-primary" style="margin-left: 10px">Create Role</a>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid px-2">
            <div class="row">
                @if (Model.Any())
                {
                    foreach (ApplicationUser user in Model)
                    {
                        <div class="col-12 col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Role Id: @user.Id
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@user.UserName</h5>
                                </div>
                                <div class="card-footer">
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                         <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" 
                                                                               class="btn btn-warning">Edit</a>
                                        <button type="submit" class="btn btn-danger" 
                                                onclick="return confirm('Are you sure to delete this user : @user.UserName')">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            No Users created yet
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <a class="btn btn-primary" style="margin: 25px" asp-controller="Account" asp-action="Register">Create User</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->