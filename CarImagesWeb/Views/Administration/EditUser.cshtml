@model CarImagesWeb.ViewModels.AdministrationViewModels.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit User</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Administration</a>
                        </li>
                        <li class="breadcrumb-item active">Edit User</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <form method="post" asp-action="EditUser">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 control-label"></label>
                        <input asp-for="Id" disabled class="col-sm-10 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-2 control-label"></label>
                        <input asp-for="UserName" class="col-sm-10 form-control"/> 
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 control-label"></label>
                        <input asp-for="Email" type="email" class="col-sm-10 form-control"/> 
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
            </div>
        </form>
        
        <form asp-action="ChangePassword" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-outline-danger">Change Password</button>
        </form>

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3>Roles of the user</h3>
                        </div>
                        <div class="card-body">
                            <ol>
                                @if (Model.Roles.Any())
                                {
                                    foreach (var role in Model.Roles)
                                    {
                                        <li>@role</li>
                                    }
                                }
                                else
                                {
                                    <li>None at the moment</li>
                                }
                            </ol>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-info float-sm-right">User Roles</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->