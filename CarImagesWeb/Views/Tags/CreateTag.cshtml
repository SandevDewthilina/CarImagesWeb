@model CarImagesWeb.ViewModels.TagViewModels.CreateTagViewModel

@{
    ViewData["Title"] = "Create Tag";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center">
                <div class="col-12 col-md-10">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="ListTags">Tags</a>
                        </li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <form asp-action="CreateTag">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10">
                        <div class="card">
                            <div class="card-header">
                                <h2>Create Tag</h2>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control"/>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Code" class="control-label"></label>
                                    <input asp-for="Code" class="form-control"/>
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Country</label>
                                    <select asp-for="SelectedCountryId" class="form-control" asp-items="@(new SelectList(Model.Countries, nameof(Country.Id), nameof(Country.Code)))"></select>
                                    <span asp-validation-for="SelectedCountryId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Type</label>
                                    <select asp-for="Type" class="form-control">
                                        <option value="Vehicle">Vehicle</option>
                                        <option value="Container">Container</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create Tag" class="btn btn-primary"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- /.content -->
</div>

<div>
    <a asp-action="ListTags">Back to List</a>
</div>