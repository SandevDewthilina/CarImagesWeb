@model CarImagesWeb.ViewModels.TagViewModels.EditTagViewModel
@{
    ViewBag.Title = "Edit tag";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit tag</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="ListTags">Tags</a>
                        </li>
                        <li class="breadcrumb-item active">Edit tag</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form method="post">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 control-label"></label>
                        <input asp-for="Id" disabled class="col-sm-10 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Code" class="col-sm-2 control-label"></label>
                        <input asp-for="Code" disabled class="col-sm-10 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 control-label"></label>
                        <input asp-for="Name" class="col-sm-10 form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Country</label>
                        <select asp-for="SelectedCountryId" id="myselect" class="form-control select2" asp-items="@(new SelectList(Model.Countries, nameof(Country.Id), nameof(Country.Code)))"></select>
                        <span asp-validation-for="SelectedCountryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Type</label>
                        <select asp-for="Type" id="myselect2" class="form-control">
                            <option value="Vehicle">Vehicle</option>
                            <option value="Container">Container</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListTags" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script >
    //Get select object
    var objSelect = document.getElementById("myselect");
    var select = document.getElementById("myselect2");
    
    //Set selected
    setSelectedValue(objSelect, @Html.Raw(Model.SelectedCountryId));
    setSelectedValue(select, @Html.Raw(Model.Type));
    
    function setSelectedValue(selectObj, valueToSet) {
        for (var i = 0; i < selectObj.options.length; i++) {
            if (selectObj.options[i].value == valueToSet) {
                selectObj.options[i].selected = true;
                return;
            }
        }
    }
    </script>
}