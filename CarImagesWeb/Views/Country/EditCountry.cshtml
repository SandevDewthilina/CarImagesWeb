@model CarImagesWeb.ViewModels.TagViewModels.EditEntityViewModel
@{
    ViewBag.Title = "Edit Country";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit Country</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="ListCountries">Countries</a>
                        </li>
                        <li class="breadcrumb-item active">Edit Country</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form method="post">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 control-label"></label>
                        <input asp-for="Id" disabled class="col-sm-10 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Code" class="col-sm-2 control-label"></label>
                        <input asp-for="Code" disabled class="col-sm-10 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 control-label"></label>
                        <input asp-for="Name" class="col-sm-10 form-control"/> 
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListCountries" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->