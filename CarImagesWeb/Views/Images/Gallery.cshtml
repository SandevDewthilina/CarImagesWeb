@section Styles
{
  <style>
  /*A  gallery with max 5 columns*/
  .gallery{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    /* max 5 columns min 2 columns */
  }
  .gallery .image img {
    width: 100%;
    height: 200px;
    object-fit: contain;
    margin-bottom: 10px;
  }
  </style>
}

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1>View Files</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12 search-form">
      <div class="card">
        <!--form with two inline radio buttons to select either vehicle or container
        A drop down with a search to search for Vehicle and
        a multi select drop down to select tags
        and a search button-->
        <div class="card-body">
          <form method="post">
            <div class="row">
              <div class="col-lg-4 col-md-6 col-12 form-group clearfix d-flex justify-content-between align-items-center">
                <div class="icheck-primary d-inline mr-3">
                  <input type="radio" id="Vehicles" name="ImageCategory" value="Vehicles" hidden>
                  <label for="Vehicles">Vehicles</label>
                </div>
                <div class="icheck-primary d-inline">
                  <input type="radio" id="Containers" name="ImageCategory" value="Containers" hidden>
                  <label for="Containers">Containers</label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-5 col-12">
                <div class="form-group">
                  <div class="form-group" id="VehicleDropdown">
                    <label>Vehicle</label>
                    <select id="VehicleType" class="form-control select2" name="VehicleType" style="width: 100%;">
                      <option selected="selected" value="">-- Select Vehicle --</option>
                      <!-- Bind options to the list of vehicle types in the view model -->
                      <option value="">CID/123</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-lg-5 col-12">
                <div class="form-group" id="TagDropdowns">
                  <label>Select Tag</label>
                  <select class="select2" multiple="multiple" data-placeholder="Select Container Tags" style="width: 100%;">
                    <!-- Bind options to the list of vehicle types in the view model -->
                    <option>Front</option>
                    <option>Front</option>
                    <option>Front</option>
                  </select>
                </div>
              </div>
              <div class="col-lg-2 col-12 d-flex flex-column justify-content-center">
                <button class="btn btn-primary">Search</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row my-4">
    <div class="gallery col-12">
      @for (int i = 0; i < 10; i++)
      {
        <div class="image">
          <img src="https://images.rawpixel.com/image_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA1L2ZsMjY1MTg4MzU1NDItaW1hZ2Uta3liZWxhZm8uanBn.jpg" alt="">
        </div>
      }
    </div>
  </div>
</div>

